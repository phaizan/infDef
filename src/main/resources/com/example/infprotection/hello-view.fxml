<AnchorPane prefHeight="397.0" prefWidth="347.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.infprotection.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <fx:include fx:id="loginPane" source="Login.fxml"/>
   <AnchorPane fx:id="loginForm" layoutX="97.0" layoutY="100.0" prefHeight="202.0" prefWidth="154.0" visible="false">
      <children>
         <Label layoutY="5.0" text="Введите логин:" />
         <TextField fx:id="login" layoutY="30.0" promptText="Логин" />
         <Label layoutY="65.0" text="Введите пароль:" />
         <PasswordField fx:id="password" layoutY="93.0" promptText="Пароль" />
          <Button fx:id="loginButton" alignment="CENTER" layoutX="33.0" layoutY="205.0" onAction="#onLoginButtonClick" prefHeight="30.0" prefWidth="84.0" text="Войти" />
      </children>
   </AnchorPane>
   <AnchorPane fx:id="adminPanel" layoutX="88.0" layoutY="107.0" prefHeight="170.0" prefWidth="180.0" visible="false">
      <children>
         <VBox prefHeight="200.0" prefWidth="122.0" spacing="20.0">
            <children>
               <Button fx:id="changePassword" mnemonicParsing="false" onAction="#onChangePasswordClick" text="Сменить пароль" />
               <Button fx:id="checkUsers" mnemonicParsing="false" onAction="#onChangePasswordClick" prefHeight="47.0" prefWidth="107.0" text="Просмотр пользователей" wrapText="true" />
            </children>
         </VBox>
         <Button fx:id="exit" layoutY="136.0" mnemonicParsing="false" onAction="#onExitClick" text="Выйти из системы" />
      </children>
   </AnchorPane>
   <AnchorPane layoutX="74.0" layoutY="111.0" prefHeight="200.0" prefWidth="200.0">
      <children>
         <Label layoutX="2.0" layoutY="24.0" text="Имя пользователя" />
         <TextField layoutX="51.0" layoutY="19.0" />
         <Label layoutX="30.0" layoutY="60.0" text="Блокировка" />
         <Label layoutX="30.0" layoutY="97.0" text="Пароль" />
         <CheckBox contentDisplay="GRAPHIC_ONLY" layoutX="117.0" layoutY="60.0" mnemonicParsing="false" mouseTransparent="true" />
         <CheckBox contentDisplay="GRAPHIC_ONLY" layoutX="87.0" layoutY="97.0" mnemonicParsing="false" mouseTransparent="true" />
         <Button layoutX="9.0" layoutY="117.0" mnemonicParsing="false" text="Button" />
         <Button layoutX="115.0" layoutY="116.0" mnemonicParsing="false" text="Button" />
         <Button layoutX="8.0" layoutY="152.0" mnemonicParsing="false" text="Button" />
         <Button layoutX="113.0" layoutY="151.0" mnemonicParsing="false" text="Button" />
      </children>
   </AnchorPane>
   <AnchorPane fx:id="passwordChangeForm" layoutX="81.0" layoutY="100.0" prefHeight="189.0" prefWidth="181.0" visible="false">
      <children>
         <VBox layoutX="-1.0" layoutY="1.0" prefHeight="111.0" prefWidth="181.0" spacing="20.0">
            <children>
               <PasswordField fx:id="oldPassword" promptText="Старый пароль" />
               <PasswordField fx:id="newPassword" promptText="Новый пароль" />
               <PasswordField fx:id="passwordVerification" promptText="Повтор нового пароля" />
            </children>
         </VBox>
         <Button fx:id="changePasswordConfirm" layoutX="45.0" layoutY="126.0" mnemonicParsing="false" onAction="#onChangePasswordConfirmClick" text="Подтвердить" />
         <Button fx:id="cancelChangePassword" layoutX="60.0" layoutY="159.0" mnemonicParsing="false" onAction="#onCancelChangePasswordClick" text="Отмена" />
      </children>
   </AnchorPane>
   <Label fx:id="message" layoutX="93.0" layoutY="21.0" maxHeight="1.7976931348623157E308" prefHeight="56.0" prefWidth="158.0" wrapText="true" />
</AnchorPane>
